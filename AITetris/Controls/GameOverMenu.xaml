<UserControl x:Class="AITetris.Controllers.GameOverMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AITetris.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500">
    <Grid>
        <Border
            x:Name="GameOverMenuBorder"
            BorderThickness="2"
            BorderBrush="Silver">

            <StackPanel
                x:Name="GameOverMenuSP">

                <Label
                    x:Name="GameOverMenuTitle"
                    Content="Game over"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="25"
                    FontWeight="Bold"
                    Margin="0, 10"/>

                <StackPanel
                    x:Name="GameOverMenuContainer"
                    Orientation="Horizontal">

                    <Border
                        x:Name="GameOverMenuLBBorder"
                        MinWidth="250">

                        <StackPanel
                        x:Name="GameOverMenuLeaderboardSP">
                            <Label
                                x:Name="GameOverLBTitle"
                                Content="Leaderboard"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontFamily="Tahoma"
                                FontSize="20"
                                FontWeight="Bold" />

                            <Label
                            x:Name="GameOverLBOne"
                            Content="Name / Score"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold" />

                            <Label
                            x:Name="GameOverLBTwo"
                            Content="Name / Score"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold" />

                            <Label
                            x:Name="GameOverLBThree"
                            Content="Name / Score"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold" />

                            <Label
                            x:Name="GameOverLBFour"
                            Content="Name / Score"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold" />

                            <Label
                            x:Name="GameOverLBFive"
                            Content="Name / Score"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold" />
                        </StackPanel>
                        
                    </Border>


                    <Border
                        x:Name="GameOverMenuControlsBorder"
                        MinWidth="250">

                        <StackPanel
                        x:Name="GameOverMenuControlsSP">
                            <Button
                                x:Name="GameOverMenuControlRevive"
                                Content="Revive"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontFamily="Tahoma"
                                FontSize="15"
                                FontWeight="Bold" 
                                Margin="0, 10"
                                Click="GameOverMenuControlRevive_Click">

                            </Button>
                            
                            <Button
                                x:Name="GameOverMenuControlSaveAI"
                                Content="Save AI"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontFamily="Tahoma"
                                FontSize="15"
                                FontWeight="Bold" 
                                Margin="0, 10"
                                Click="GameOverMenuControlSaveAI_Click">

                            </Button>

                            <Button
                                x:Name="GameOverMenuControlQuitGame"
                                Content="Quit Game"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontFamily="Tahoma"
                                FontSize="15"
                                FontWeight="Bold" 
                                Margin="0, 10"
                                Click="GameOverMenuControlQuitGame_Click">

                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
