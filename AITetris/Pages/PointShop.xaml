                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade8_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade8_buyBtn"
                            Content="Buy"
