                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade8_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade9SP"
                        Grid.Column="2"
                        Grid.Row="2"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade9_NameLbl"
                            Content="+1 Emergency Line Clear"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="A button in the Actions panel will be available. This button removes the lowest 2 lines in the gameboard. In the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade9_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade9_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade9_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade10SP"
                        Grid.Column="0"
                        Grid.Row="3"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade10_NameLbl"
                            Content="+1 Remove swap"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="A button in the Actions panel will be available. This button removes the swapped block from the swap block panel. In the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade10_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade10_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade10_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade11SP"
                        Grid.Column="1"
                        Grid.Row="3"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade11_NameLbl"
                            Content="Slow time +30s"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="A button in the Actions panel will be available. This button add a 30 second slow time effect. In the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade11_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade11_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade11_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade12SP"
                        Grid.Column="2"
                        Grid.Row="3"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade12_NameLbl"
                            Content="Slow time +30s"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="A button in the Actions panel will be available. This button add a 30 second slow time effect. In the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade12_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade12_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
