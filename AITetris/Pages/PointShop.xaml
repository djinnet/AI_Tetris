                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade12_buyBtn_Click">
                        </Button>

                    </StackPanel>
                </Grid>

                <!-- Stackpanel holding the wallet Label and navigation button -->
                <StackPanel
                    x:Name="PointShopShopControlsSP">

                    <!-- Wallet Label -->
                    <Label
                        x:Name="PointShopShopControlsMetaCurrency"
                        Content="Wallet: 0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontFamily="Tahoma"
                        FontSize="20"
                        FontWeight="Bold" />

                    <!-- Navigation button -->
                    <Button
                        x:Name="PointShopShopControlsBackToMainMenu"
                        Content="Main Menu"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontFamily="Tahoma"
                        FontSize="15"
                        FontWeight="Bold" 
                        Margin="0, 10"
                        Click="PointShopShopControlsBackToMainMenu_Click">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
