<Page x:Class="AITetris.Pages.PointShop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AITetris.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PointShop">

    <!-- Gridsize is 3 cols by 5 rows -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <!-- Background -->
        <Image
            x:Name="PointShopBackground"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Grid.RowSpan="5"
            Opacity="0.2"
            Stretch="Uniform"/>

        <!-- Border used as a container for the grid with upgrades -->
        <Border
            x:Name="PointShopShopGridBorder"
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="3"
            MinWidth="375"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel>
                <!-- Page title -->
                <Label
                    x:Name="ShopTitleLbl"
                    Content="Point shop"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="25"
                    FontWeight="Bold"
                    Margin="0,0,0,15"/>

                <!-- Grid holding the upgrade stackpaanels -->
                <!-- Gridsize is 3 cols by 4 rows -->
                <Grid
                    x:Name="PointShopShopGrid"
                    Margin="0,0,0,15">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Upgrades 1-12-->
                    <StackPanel
                        x:Name="Upgrade1SP"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade1_NameLbl"
                            Content="+1 Revive"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="Add one revive to the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade1_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade1_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade1_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade2SP"
                        Grid.Column="1"
                        Grid.Row="0"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade2_NameLbl"
                            Content="+1 Revive"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="Add one revive to the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade2_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade2_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade2_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade3SP"
                        Grid.Column="2"
                        Grid.Row="0"
                        Margin="5, 5">

                        <!-- Upgrade title -->
