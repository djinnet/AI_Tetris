                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade4_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade4_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade5SP"
                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade5_NameLbl"
                            Content="Score +25%"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="Add a permanent 25% point increase to the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade5_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade5_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
