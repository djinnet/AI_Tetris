                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="Add one revive to the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade3_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
