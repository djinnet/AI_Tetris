                            Margin="0, 5"
                            Click="Upgrade6_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade7SP"
                        Grid.Column="0"
                        Grid.Row="2"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade7_NameLbl"
                            Content="+1 Emergency Line Clear"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="A button in the Actions panel will be available. This button removes the lowest 2 lines in the gameboard. In the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade7_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="9"
                            FontWeight="Bold" />

                        <!-- Buy button for the upgrade -->
                        <Button
                            x:Name="Upgrade7_buyBtn"
                            Content="Buy"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade7_buyBtn_Click">
                        </Button>
                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade8SP"
                        Grid.Column="1"
                        Grid.Row="2"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade8_NameLbl"
                            Content="+1 Emergency Line Clear"
