                        Grid.Row="1"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade4_NameLbl"
                            Content="Score +25%"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
                            ToolTip="Add a permanent 25% point increase to the next game when activated"/>

                        <!-- Upgrade price -->
                        <Label
                            x:Name="Upgrade4_PriceLbl"
                            Content="500 Meta"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
