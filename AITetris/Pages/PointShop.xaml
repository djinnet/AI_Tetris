                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade3_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade4SP"
