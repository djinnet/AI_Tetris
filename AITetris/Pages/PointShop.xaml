                            FontFamily="Tahoma"
                            FontSize="12"
                            FontWeight="Bold" 
                            Margin="0, 5"
                            Click="Upgrade5_buyBtn_Click">
                        </Button>

                    </StackPanel>

                    <StackPanel
                        x:Name="Upgrade6SP"
                        Grid.Column="2"
                        Grid.Row="1"
                        Margin="5, 5">

                        <!-- Upgrade title -->
                        <Label
                            x:Name="Upgrade6_NameLbl"
                            Content="Score +50%"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Tahoma"
                            FontSize="15"
                            FontWeight="Bold"
