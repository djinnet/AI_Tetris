                    FontSize="10"
                    FontWeight="Bold"
                    Margin="0, 10"
                    Click="GameBoardActionsResumeTimeTestBtn_Click">

                </Button>-->

                <Button
                    x:Name="GameBoardActionsConsumeOneBtn"
                    Content="Consume One"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"
                    Click="GameBoardActionsConsumeOneBtn_Click">

                </Button>

                <Button
                    x:Name="GameBoardActionsConsumeTwoBtn"
                    Content="Consume Two"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"
                    Click="GameBoardActionsConsumeTwoBtn_Click">

                </Button>

                <Button
                    x:Name="GameBoardActionsConsumeThreeBtn"
                    Content="Consume Three"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"
                    Click="GameBoardActionsConsumeThreeBtn_Click">

                </Button>
            </StackPanel>
        </Border>

        <!-- Score -->
        <Border
            x:Name="GameBoardScoreBorder"
            Grid.Column="1"
            Grid.Row="2"
            Grid.RowSpan="2"
            BorderThickness="2"
            BorderBrush="Silver">

            <StackPanel
                x:Name="GameBoardScoreSP">

                <Label 
                    x:Name="GameBoardScoreTitleLbl"
                    Content="Score"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="15"
                    FontWeight="Bold"/>

                <Label 
                    x:Name="GameBoardScorePlayerLbl"
                    Content="Player Name"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="8"
                    FontWeight="Bold"/>

                <Label 
                    x:Name="GameBoardScoreTimeLbl"
                    Content="00:00:00:00"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="8"
                    FontWeight="Bold"/>

                <Label 
                    x:Name="GameBoardScoreLineClearedLbl"
                    Content="Lines: 0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="8"
                    FontWeight="Bold"/>

                <Label 
                    x:Name="GameBoardScorePointLbl"
                    Content="Point: 0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="8"
                    FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Controls -->
        <Border
            x:Name="GameBoardControlsBorder"
            Grid.Column="1"
            Grid.Row="4"
            Grid.RowSpan="4"
            BorderThickness="2"
            BorderBrush="Silver">

            <StackPanel
                x:Name="GameBoardControlsSP">

                <Label
                    x:Name="GameBoardControlsTitle"
                    Content="Controls"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="15"
                    FontWeight="Bold"
                    Margin="0, 5" />

                <Label
                    x:Name="GameBoardControlsPause"
                    Content="Pause (Esc)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsSave"
                    Content="Save (Left Shift)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsRotate"
                    Content="Rotate (Up Arrow)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsLeft"
                    Content="Left (Left Arrow)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsRight"
                    Content="Right (Right Arrow)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsDown"
                    Content="Down (Down Arrow)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>

                <Label
                    x:Name="GameBoardControlsInstantDown"
                    Content="Instant Down (Space)"
                    HorizontalContentAlignment="Center"
                    FontFamily="Tahoma"
                    FontSize="10"
                    FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
